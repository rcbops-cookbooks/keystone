[sql]
# The SQLAlchemy connection string used to connect to the database
connection = mysql://<%= @db_info["user"] %>:<%= @db_info["pass"] %>@<%= @db_info["ipaddress"] %>/<%= @db_info["name"] %>

# the timeout before idle sql connections are reaped
idle_timeout = 200
min_pool_size = 5
max_pool_size = 10
pool_timeout = 200

[identity]
