driver = keystone.identity.backends.ldap.Identity

[assignment]
driver = keystone.assignment.backends.sql.Assignment

<%= render "partials/ldap-options.partial.erb" %>
<% elsif @auth_type == "pam" %>
driver = keystone.identity.backends.pam.PamIdentity
